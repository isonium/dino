[Unit]
Description=dino-${DINO_SERVICE}
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/dino/dino
ExecStart=/home/dino/dino/bin/dino.sh ${DINO_ENVIRONMENT} ${DINO_PORT} ${DINO_SERVICE}
Restart=always
User=dino
Group=dino
LimitNOFILE=10240
LimitFSIZE=infinity

[Install]
WantedBy=multi-user.target